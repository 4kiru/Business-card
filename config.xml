<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "business card improved"
        version     = "1.0.0" >

    <name>businesCard imp</name>
    <description>My business card improved</description>
    <author href="http://saldev.pl" email="mateusz.salawa@gmail.com">
		Mateusz Salawa
	</author>
	<platform name="android" />
	<icon src="res/icon.png" platform="android" width="180" height="180" />
    <platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="res/splash.png" density="land-hdpi"/>
    <splash src="res/splash.png" density="land-ldpi"/>
    <splash src="res/splash.png" density="land-mdpi"/>
    <splash src="res/splash.png" density="land-xhdpi"/>

    <splash src="res/splash.png" density="port-hdpi"/>
    <splash src="res/splash.png" density="port-ldpi"/>
    <splash src="res/splash.png" density="port-mdpi"/>
    <splash src="res/splash.png" density="port-xhdpi"/>
</platform>  
        <platform name="browser">
        <preference name="SplashScreen" value="/res/splash.png" /> <!-- defaults to "/img/logo.png" -->
        <preference name="SplashScreenDelay" value="2000" /> <!-- defaults to "3000" -->
        <preference name="SplashScreenBackgroundColor" value="green" /> <!-- defaults to "#464646" -->
        <preference name="ShowSplashScreen" value="true" /> <!-- defaults to "true" -->
        <preference name="SplashScreenWidth" value="600" /> <!-- defaults to "170" -->
        <preference name="SplashScreenHeight" value="300" /> <!-- defaults to "200" -->
        </platform>
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
	<plugin name="cordova-plugin-inappbrowser" spec="~1.6.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.2" />
</widget>